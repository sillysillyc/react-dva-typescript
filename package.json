    "eslint-plugin-react-app": "^6.2.2",
    "husky": "^4.3.0",
    "less-loader": "^6.2.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.0.5",
    "react-app-rewired": "^2.1.6",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-webpack-plugin": "^2.1.0",
    "webpack-bundle-analyzer": "^3.8.0"
  }
